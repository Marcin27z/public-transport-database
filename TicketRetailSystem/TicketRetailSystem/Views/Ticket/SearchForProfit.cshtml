@model TicketRetailSystem.ViewModels.DatesViewModel
@{
    ViewBag.Title = "Policz zysk ze sprzedaży biletów";
}

<h2>Count profit from sale of tickets</h2>

@using (Html.BeginForm("GetTotalCostOfTickets", "Ticket", FormMethod.Post, Url.Action("ticket/totalProfit")))
{
    <div class="form-group">
        <label> Begin date (YYYY-MM-DD)</label>
        @Html.TextBoxFor(t => t.StartTime, new { @class = "form-control" })
        <label> End date (YYYY-MM-DD)</label>
        @Html.TextBoxFor(t => t.EndTime, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-primary"> Search </button>
    </div>
}
