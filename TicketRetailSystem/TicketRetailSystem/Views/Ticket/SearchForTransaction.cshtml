@model TicketRetailSystem.ViewModels.DateViewModel
@{
    ViewBag.Title = "Wybierz datę";
}

<h2>Choose date</h2>

@using (Html.BeginForm("GetByDate", "Ticket", FormMethod.Post, Url.Action("ticket/transactions")))
{
    <div class="form-group">
        <label>Date of transaction (YYYY-MM-DD)</label>
        @Html.TextBoxFor(d => d.CurrentDate, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-primary"> Search </button>
    </div>
}
